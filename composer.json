{
  "name": "samuelszabo/ares-fetch",
  "description": "Wrapper around retrieving data about Czech companies from Ares.",
  "type": "project",
  "autoload": {
    "psr-4": {
      "AresFetch\\": "src/"
    }
  },
  "require": {
    "php": ">=8.3",
    "vlucas/phpdotenv": "^5.6",
    "symfony/yaml": "^7.0",
    "psr/http-client": "^1.0"
  },
  "suggest": {
    "guzzlehttp/guzzle": "PSR-7 client"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3.9",
    "phpstan/phpstan": "^1.10",
    "mockery/mockery": "^1.6"
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@phpunit"
    ],
    "cs-check": "phpcs --colors --parallel=16 -p",
    "cs-fix": "phpcbf --colors --parallel=16 -p",
    "phpstan": "phpstan analyse",
    "phpunit": "phpunit",
    "pre-commit": [
      "@cs-fix",
      "@phpstan",
      "@phpunit"
    ]
  }
}
